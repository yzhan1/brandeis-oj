<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :user_phone, class: "form-control", placeholder: "Phone Number (please include country code and numbers only)" %>
    <h6 class="card-subtitle mb-2 text-muted" style="margin-top: 20px">
      Upload your phone number to get text message notifications when new assignments have been posted!
    </h6>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class: "btn btn-success btn-block" %>
  </div>
<% end %>
