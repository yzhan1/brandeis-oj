<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row" style="margin-left: 0; margin-right: 0">
    <div class="container">
      <div class="row" style="margin-left: 0; margin-right: 0">
        <dl class="row">
          <dt class="col-sm-3">
            <%= form.label :course_title %>
          </dt>
          <dd class="col-sm-9">
            <%= form.text_field :course_title, id: :course_course_title, class: "form-control", rows: "2"%>
          </dd>
          <dt class="col-sm-3">
            <%= form.label :course_code %>
          </dt>
          <dd class="col-sm-9">
            <%= form.text_field :course_code, id: :course_course_code, class: "form-control" %>
          </dd>
          <dt class="col-sm-3">
            Permission
          </dt>
          <dd class="col-sm-9">
            <% if course.permission.nil? %>

            <% end %>
            <%=  course.permission %>
          </dd>
          <div class="ml-auto" style="margin-top: 20px">
            <%= form.submit "Save", class: "btn btn-outline-success ml-auto"%>
            <%= link_to 'Back', course, class: "btn btn-outline-danger ml-auto" %>
          </div>
        </dl>
      </div>
    </div>
  </div>

<% end %>
